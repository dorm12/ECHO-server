{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    //"parser": "@typescript-eslint/parser",
    "parserOptions": { "project": ["./tsconfig.json"] },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
                "semi" : [2, "always"],
                "prefer-const" : [2, {"destructuring": "any"}],
                "quotes" : [2, "double"]
                               
    },
    "ignorePatterns": ["src/**/*.test.ts", "src/frontend/generated/*"]
}